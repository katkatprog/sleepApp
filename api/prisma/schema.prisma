generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SoundInfo {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  url         String
  isMaleVoice Boolean?
  playCount   Int      @default(0)
  reqUserId   Int?
  user        User?    @relation(fields: [reqUserId], references: [id], onDelete: SetNull)
  SoundFavorite SoundFavorite[]
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  image           String?
  hashedPassword  String
  SoundInfo       SoundInfo[]
  SoundFavorite   SoundFavorite[]
}

model SoundReqQueue {
  userId      Int       @id
  theme       String
  isMaleVoice Boolean   @default(false)
  requestedAt DateTime  @default(now())
}

model SoundFavorite {
  userId    Int
  soundId   Int
  createdAt DateTime  @default(now())
  SoundInfo SoundInfo @relation(fields: [soundId], references: [id], onDelete: Cascade)
  User      User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, soundId])
}
