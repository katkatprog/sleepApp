generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SoundInfo {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  url         String
  isMaleVoice Boolean?
  playCount   Int      @default(0)
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  hashedPassword  String
}